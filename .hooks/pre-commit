#!/bin/bash
set -e

echo "Running pre-commit checks..."

# Format check
echo "Checking formatting..."
if ! cargo fmt --check; then
    echo ""
    echo "Formatting issues found. Run 'cargo fmt' to fix."
    exit 1
fi

# Clippy linting (warnings shown but not fatal, only errors block)
echo "Running clippy..."
if ! cargo clippy 2>&1; then
    echo ""
    echo "Clippy found errors. Fix them before committing."
    exit 1
fi

# Type check
echo "Running type check..."
if ! cargo check 2>&1; then
    echo ""
    echo "Type check failed. Fix errors before committing."
    exit 1
fi

echo "All pre-commit checks passed!"
